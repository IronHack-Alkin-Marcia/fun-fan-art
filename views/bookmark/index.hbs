<section class="features main-bg" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2 class="pt-5">Your Selected art</h2>
      <p><i>Bookmark your favorite artists and their work.</i></p>
    </div>

    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">

          <div class="row">

            {{#each bookmark}}
            {{#with art}}

            <div class="card card-show my-4 box-shadow" style="width: 300px;">
              <div class="card-img">
                <img class="index-img-card" src="{{img}}" alt="{{title}}">
              </div>
              <div class="card-body">
                <p class="card-text">{{artist}}</p>
                <p class="text-muted"><i>{{title}}</i></p>
              </div>
              <a href="/bookmark/art/{{artId}}" class="btn btn-bg index-btn"><i>View</i></a>
            </div>
            {{/with}}
            {{/each}}

          </div>

        </div>
      </div>
    </div>

  </div>
</section>