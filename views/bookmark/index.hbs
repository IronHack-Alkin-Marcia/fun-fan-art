<section class="features main-bg" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2 class="pt-5">Your Selected art: </h2>
    </div>

    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">

          <div class="row">

            {{#each bookmark}}
            {{#with art}}

            <div class="card my-4 box-shadow card-show mr-3" style="width: 350px">
              <div class="card-img">
                <img class="index-img-card" src="{{img}}" alt="{{title}}">
              </div>
              <div class="card-body">
                <form action="/bookmark/{{..._id}}/savenote" method="POST">
                  <label for="comment">Note: </label>
                  <input type="text" id="comment" name="comment">
                  <button type="submit">Add</button>
                </form>
              </div>
              <div class="show-btn">
                <a href="/artapi/art/{{artId}}" class="btn btn-bg index-btn"><i>View</i></a>
                <a href="/artapi/art/{{artId}}" class="btn btn-bg index-btn"><i>Remove</i></a>
              </div>
            </div>

            {{/with}}
            {{/each}}


          </div>
        </div>
      </div>
    </div>
  </div>
</section>