<section class="features main-bg" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2 class="pt-5">Your Selected art: </h2>
    </div>

    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">

          <div class="row">

            {{#each bookmark}}
            {{#with art}}

            <div class="card my-4 box-shadow card-show mr-3" style="width: 350px">
              <div class="card-img">
                <img class="index-img-card" src="{{img}}" alt="{{title}}">
              </div>
              <div class="card-body">
                <div class="container justify-content-center mt-5">
                  <div class="d-flex justify-content-center pt-3 pb-2">
                    <input type="text" name="text" placeholder="+ Add a note" class="form-control addtxt">
                  </div>
                  <div class="d-flex justify-content-center py-2">
                    <div class="second py-2 px-2 note-box"> <span class="text1">Type your note, and hit enter to add
                        it</span>
                      <div class="d-flex justify-content-between py-1 pt-2">
                        <div><img src="https://i.imgur.com/AgAC1Is.jpg" width="18"><span class="text2">Martha</span>
                        </div>
                        <div><span class="text3">Upvote?</span><span class="thumbup"><i
                              class="fa fa-thumbs-o-up"></i></span><span class="text4">3</span></div>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              <div class="show-btn">
                <a href="/artapi/art/{{artId}}" class="btn btn-bg index-btn"><i>View</i></a>
                <a href="/artapi/art/{{artId}}" class="btn btn-bg index-btn"><i>Remove</i></a>
              </div>
            </div>

            {{/with}}
            {{/each}}


          </div>
        </div>
      </div>
    </div>
  </div>
</section>