{{#with bookmark}}
<section class="features main-bg" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2 class="pt-5 mt-5">{{art.title}}</h2>
      <p><i>{{art.smallDescription}}</i></p>
    </div>
    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">


          <div class="row">


            <div class="card card-show box-shadow mb-5" style="width: 700px">
              <img class="card-img-top" src="{{art.img}}" alt="{{art.title}}">
              <div class="card-body">
                <h3 class="card-title">{{art.title}}</h3>
                <h5 class="card-title"><span class="pretty">Artist:</span> {{art.artist}}</h5>
                <p class="card-text"><span class="pretty">Description:</span> {{art.description}}</p>
                <p class="card-text"><span class="pretty">Year:</span> {{art.year}}</p>
                <div class="comment-box mb-3">
                  <form action="/bookmark/{{_id}}/savenote" method="POST">
                    <label for="comment" class="pretty">Comment: </label>
                    <input type="text" id="comment" name="comment" class="comment-bar">
                    <button type="submit" class="ml-3 comment-btn"><i>ADD</i></button>

                  </form>
                </div>
                {{#if comments}}

                <div class="comment-list">
                  {{#each comments}}
                  <div class="del-comment my-4"><span>-</span>{{this}}<form action="/bookmark/{{..._id}}/deletenote"
                      method="POST">
                      <input type="hidden" value="{{this}}" name="noteText">
                      <button type="submit" class="ml-2 comment-btn"><i>DEL</i></button>
                    </form>
                  </div>
                  {{/each}}
                </div>

                {{/if}}




                <div class="comment-box mb-3">
                  <form action="/bookmark/{{_id}}/savetag" method="POST">
                    {{#if ...tags}}

                    <label for="tag" class="pretty">tag: </label>
                    <select class="mr-2 select-tag" name="tag" id="tag">
                      <option value="">--Select One--</option>
                      {{#each ...tags}}
                      <option value="{{this}}" {{{selector this ...tag}}}>{{this}}</option>
                      {{/each}}
                    </select>
                    {{/if}}
                    <label for="newtag" class="pretty">{{#if ...tags}} or new tag: {{else}}Tag: {{/if}}</label>
                    <input type="text" id="newtag" name="newtag" class="comment-bar">
                    <button type="submit" class="ml-3 comment-btn"><i>ADD</i></button>

                  </form>
                </div>




                <div class="show-btn">
                  <a href="/bookmark/" class="btn btn-bg"><i>Go Back</i></a>

                </div>
              </div>
            </div>


          </div>

        </div>
      </div>
    </div>
  </div>
</section>
{{/with}}