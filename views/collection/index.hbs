<section class="features main-bg" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2 class="pt-5">All Art Selected</h2>
      <p><i>View what you and all other users bookmarked</i></p>
    </div>

    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">

          <div class="row">

            {{#each arts}}


            <div class="card card-show my-4 box-shadow" style="width: 300px;">
              <div class="card-img">
                <img class="index-img-card" src="{{img}}" alt="{{title}}">
              </div>
              <div class="card-body">
                <p class="card-text">{{artist}}</p>
                <p class="text-muted"><i>{{title}}</i></p>
                <p class="text-muted"><i>{{smallDescription}}</i></p>
                {{#if userList}}
                <p class="text-muted"><i>
                    <span>Bookmarked by: </span><br>
                    {{#each userList}}
                    - {{this.fullName}} <br>
                    {{/each}}
                  </i></p>
                {{/if}}
              </div>

            </div>

            {{/each}}




          </div>

        </div>
      </div>
    </div>

  </div>
</section>