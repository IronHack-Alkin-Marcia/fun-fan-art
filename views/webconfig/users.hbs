<section class="features main-bg" id="features">
  <div class="container">
    <div class="section-heading text-center">
      <h2 class="pt-5">All Users</h2>
      <p><i>Delete / Promote / Demote User</i></p>
    </div>

    <div class="row">
      <div class="col-lg-12 my-auto">
        <div class="container-fluid">

          <div class="row">

            {{#each users}}

            <div class="card card-show my-4 box-shadow" style="width: 300px;">

              <div class="card-img">
                {{#if img}}

                <img class="index-img-card" src="{{img}}" alt="{{username}}">

                {{else}}
                <img src="/images/avatar-1577909_640.png" alt="home image" class="index-img-card">
                {{/if}}
              </div>

              <div class="card-body">
                <p class="card-text">{{username}} / {{role}}</p>
                <p class="text-muted"><i>{{fullName}}</i></p>
              </div>
              <div class="show-btn">
                <a href="/webconfig/{{_id}}/plus" class="btn btn-bg" title="Promote"><i class="fas fa-plus"></i></a>
                <a href="/webconfig/{{_id}}/minus" class="btn btn-bg" title="Demote"><i class="fas fa-minus"></i></a>
                <a href="/webconfig/{{_id}}/delete" class="btn btn-bg btn-bm"><i>Delete <i
                      class="fas fa-trash"></i></i></a>
              </div>

            </div>

            {{/each}}

          </div>

        </div>
      </div>
    </div>

  </div>
</section>